<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Skismoring.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/teal_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightblue</item>
        <item name="colorSecondaryVariant">@color/transparent</item>
        <item name="colorOnSecondary">@color/grey_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>

        <!-- theme change anim test -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skismoring.SmallComponent</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>

    </style>

    <style name="Theme.Skismoring.Dark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryDark">@color/lightblue</item>
        <item name="colorOnPrimary">@color/darkgrey</item>
        <item name="colorOnBackground">@color/darkgrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/transparent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
        <!-- theme change anim test -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skismoring.SmallComponent</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyleDark</item>

    </style>

    <style name="Theme.Skismoring.Contrast" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnBackground">@color/yellow</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/transparent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/open_sans</item>
        <!-- theme change anim test -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Skismoring.SmallComponent</item>

        <item name="android:textColorPrimary">@color/black</item>

    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ShapeAppearance.Skismoring.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


    <style name="NumberPickerText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/lightblue_light</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="BottomNavigationViewStyleDark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/lightblue_light</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_dark</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_dark</item>
    </style>
</resources>